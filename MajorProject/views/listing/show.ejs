<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row">
            <div class="col-8 offset-2"><br><br>
                <h3>
                    <%= listing.title %> :
                </h3>
                <div class="card">
                    <img src="<%= listing.image %>" class="card-img-top" alt="listing-image" style="height: 50vh;">
                    <div class="card-body">
                        <p class="card-text">
                            <%= listing.description%><br>
                                <b>&#8377; <%= listing.price.toLocaleString("en-in") %></b><br>
                                <%= listing.location %><br>
                                    <%= listing.country %>
                        </p>
                    </div>
                </div>
                <div class="btns">
                    <button class="btn btn-dark btn-1"><a href="/listings/<%= listing._id %>/edit"
                            id="btn-edit">Edit</a></button><br><br>
                    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-danger btn-1 offset-5">Delete</button>
                    </form>
                    <button class="btn btn-success btn-1 offset-1 btn-book"><a href="/listings/<%= listing._id %>/book">Book Now</a></button>
                </div>

            </div>
        </div>

    </body>